<?xml version="1.0" encoding="utf-8"?>
<!-- activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">




    <TextView
        android:id="@+id/aushad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="ROBOCROP"
        android:textSize="50sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonNavigate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Know the Pest"
        android:layout_below="@id/aushad"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />
    <TextView
        android:id="@+id/scanSubtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get the Pest Details"
        android:layout_below="@id/buttonNavigate1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />



    <Button
        android:id="@+id/monitorCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Live Monitoring"
        android:layout_below="@id/scanSubtext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />
    <TextView
        android:id="@+id/monitorSubtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monitor and Control your device"
        android:layout_below="@id/monitorCar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>
